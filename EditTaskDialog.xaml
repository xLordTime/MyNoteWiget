<Window x:Class="TaskBarWidget.EditTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aufgabe bearbeiten"
        Height="200" 
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Border Background="{DynamicResource SecondaryBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="2"
            CornerRadius="12"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            ShadowDepth="0" 
                            Opacity="0.3" 
                            Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                      Text="✏️ Aufgabe bearbeiten"
                      FontSize="18"
                      FontWeight="Bold"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      Margin="0,0,0,15"/>
            
            <!-- Input -->
            <TextBox x:Name="TaskTextBox"
                    Grid.Row="1"
                    Style="{StaticResource ModernTextBox}"
                    Height="50"
                    VerticalContentAlignment="Center"
                    FontSize="14"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    CaretBrush="{DynamicResource TextPrimaryBrush}"
                    KeyDown="TaskTextBox_KeyDown"/>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="0,15,0,0">
                <Button Content="Abbrechen"
                       Width="100"
                       Height="38"
                       Style="{StaticResource IconButton}"
                       Click="Cancel_Click"
                       Margin="0,0,10,0"/>
                <Button Content="Speichern"
                       Width="120"
                       Height="38"
                       Style="{StaticResource ModernButton}"
                       Click="OK_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
